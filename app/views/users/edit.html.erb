<div class="container">
    <!--validationによるエラーメッセージ-->
    <%= render "/layouts/error", model: @user %>
    
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-sm-5 px-5 py-3 mx-auto">
            <h1>User info</h1>
            
            <%= form_with model: @user, url: user_path(@user), local:true do |f| %>
                <div class="field pb-3">
                    <%= f.label :name %><br />
                    <%= f.text_field :name, autofocus: true, autocomplete: "book title", size:"50"  %>
                </div>
                
                <div class="field pb-3">
                    <%= f.label :profile_image %><br />
                    <%= f.attachment_field :profile_image %>
                </div>
                
                
                <div class="field pb-3">
                    <%= f.label :introduction %><br />
                    <%= f.text_area :introduction, autofocus: true, autocomplete: "your opinion anout the book", size:"52" %>
                </div>
                
                <div class="actions pb-3">
                    <%= f.submit "Update User", class: "btn btn-secondary" %>
                </div>
            <% end %>
            
            
        </div>
    </div>
    
</div>